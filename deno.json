{
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-window",
        "no-explicit-any",
        "no-node-globals",
        "no-process-global"
      ]
    },
    "exclude": ["docs/", "node_modules/", "scripts/"]
  },
  "fmt": {
    "singleQuote": true,
    "exclude": ["docs/", "node_modules/"]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run main.ts --build",
    "dev": "deno run --allow-net --allow-read --allow-run main.ts",
    "test": "deno test --no-check --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt --check",
    "fmt:fix": "deno fmt",
    "check": "deno check src/**/*.ts"
  }
}
