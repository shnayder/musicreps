{
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-window",
        "no-explicit-any",
        "no-node-globals",
        "no-process-global"
      ]
    },
    "exclude": [
      "docs/",
      "node_modules/",
      "scripts/",
      "guides/design/moments.html",
      "guides/design/components-preview.html",
      "guides/design/screenshot-review.html",
      "plans/generated/"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "exclude": [
      "docs/",
      "node_modules/",
      "guides/design/moments.html",
      "guides/design/components-preview.html",
      "guides/design/screenshot-review.html",
      "plans/generated/"
    ]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run main.ts --build",
    "dev": "deno run --allow-net --allow-read --allow-run main.ts",
    "test": "deno test --no-check --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt --check",
    "fmt:fix": "deno fmt",
    "check": "deno check src/**/*.ts $(find src -name '*.tsx' 2>/dev/null)",
    "ok": "deno lint && deno fmt --check && deno check src/**/*.ts $(find src -name '*.tsx' 2>/dev/null) && deno test --no-check --allow-read && deno run --allow-read --allow-write --allow-run main.ts --build",
    "screenshots": "npx tsx scripts/take-screenshots.ts",
    "screenshots:baseline": "npx tsx scripts/take-screenshots.ts --dir screenshots/baseline",
    "screenshots:review": "npx tsx scripts/build-screenshot-review.ts"
  }
}
